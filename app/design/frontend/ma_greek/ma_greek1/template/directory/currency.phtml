/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="form-currency">   
	<label class="hidden-sm hidden-xs"><?php echo $this->__('Currency:') ?></label>
	<ul class="drop-currency">
		<li class="currency-trigger">
			<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
				<?php if($_code == $this->getCurrentCurrencyCode()): ?>
				<a class="level-0" href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo $_code ?><i class="fa fa-angle-down"></i></a>
				<?php endif?>
			<?php endforeach; ?>
			<ul class="sub-currency">
			<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
					<li>
				<a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>" onclick="setLocation(this.value);">
						<?php echo $_code ?>
			</a>
					</li>
				
			<?php endforeach; ?>
			</ul>
		</li>
	</ul>
</div>
<?php endif; ?>
