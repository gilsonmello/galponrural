            	url: url,
            	data: data,
            	cache: false,
                beforeSend:  function() {
                    $('.loading_image').show();
                    $('.opc_available_additional').css('opacity','0.5');
                    $('.opc_tool-tip_methods').css('opacity','0.5');
                    $('#checkout-review-table-wrapper').css('opacity','0.5');
                },
                success: function(html){
                    var _json=$.parseJSON(html); 
