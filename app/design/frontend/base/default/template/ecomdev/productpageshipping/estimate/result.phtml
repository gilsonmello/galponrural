/**
 * Estimate shipping results
 *
 */
/* @var $this EcomDev_ProductPageShipping_Block_Estimate_Result */
?>
<div class="block block-shipping-estimate block-shipping-results">
    <div class="block-title">
        <strong><span><?php echo Mage::helper('ecomdev_productpageshipping')->__('Shipping Rates') ?></span></strong>
    </div>
    <div class="block-content">
        <?php if ($this->getResult()): ?>
            <dl>
                <?php foreach ($this->getResult() as $code => $_rates): ?>
                    <dt><?php echo $this->escapeHtml($this->getCarrierName($code)) ?></dt>
                    <dd>
                        <ul style="display: inline-block; width: 100%">
                            <?php foreach ($_rates as $_rate): ?>
                                <li<?php if ($_rate->getErrorMessage()) echo ' class="error-msg"'; ?> style="width: 100%;float: right">
                                    <?php if ($_rate->getErrorMessage()): ?>
                                        <?php $errorMsg = $_rate->getErrorMessage(); ?>
                                        <?php echo $this->escapeHtml($_rate->getErrorMessage()) ?>
                                    <?php else: ?>
                                    <?php $blocks = explode('***', $_rate->getMethodTitle()); ?>
                                        <?php $title = $blocks[0]; ?>
                                        <?php $comments = $blocks[1]; ?>
                                                    <!--<input name="estimate_method" type="radio" value="<?php // echo $this->escapeHtml($_rate->getCode())  ?>" id="s_method_<?php echo $_rate->getCode() ?>"<?php if ($_rate->getCode() === $this->getAddressShippingMethod()) echo ' checked="checked"' ?> class="radio" />-->
                                                    <!--<label for="s_method_<?php echo $_rate->getCode() ?>">-->
                                        <span style="float: left"><?php echo $this->escapeHtml($title) ?></span>
                                        <?php $_excl = $this->getShippingPrice($_rate->getPrice(), $this->helper('tax')->displayShippingPriceIncludingTax()); ?>
                                        <?php $_incl = $this->getShippingPrice($_rate->getPrice(), true); ?>
                                        <span style="float: right"><?php echo $_excl; ?></span>
                                        <?php if ($this->helper('tax')->displayShippingBothPrices() && $_incl != $_excl): ?>
                                            (<?php echo $this->__('Incl. Tax'); ?> <?php echo $_incl; ?>)
                                        <?php endif; ?>
                                            <span style="float: left" class="carrier-comment"><?php echo $this->escapeHtml($comments) ?></span>
                                        <!--</label>-->
                                    <?php endif ?>
                                </li>
                            <?php endforeach; ?>
                        </ul>
                    </dd>
                <?php endforeach; ?>
            </dl>
        <?php else: ?>
            <?php echo $this->getMessagesBlock()->toHtml(); ?>
        <?php endif; ?>
    </div>
</div>