<?xml version="1.0"?>
<config>
    <tabs>
		<magentothem translate="label" module="ajaxcartsuper">
			<label>Magentothem</label>
			<sort_order>205</sort_order>
		</magentothem>
    </tabs>
    <sections>
	<ajaxcartsuper translate="label" module="ajaxcartsuper">
	    <label>Ajaxcart Super</label>
	    <tab>magentothem</tab>
	    <sort_order>130</sort_order>
	    <show_in_default>1</show_in_default>
	    <show_in_website>1</show_in_website>
	    <show_in_store>1</show_in_store>
	    <groups>
		<ajaxcartsuper_config translate="label">
		    <label>General Configuration</label>
		    <frontend_type>text</frontend_type>
		    <sort_order>1</sort_order>
		    <show_in_default>1</show_in_default>
		    <show_in_website>1</show_in_website>
		    <show_in_store>1</show_in_store>
		    <fields>
                        <enabled translate="label">
                            <label>Enable Module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>							
                        </enabled>
                        <show_confirm translate="label">
			    <label>Show or hide confirm box</label>
			    <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
			    <sort_order>1</sort_order>
			    <show_in_default>1</show_in_default>
			    <show_in_website>1</show_in_website>
			    <show_in_store>1</show_in_store>							
			</show_confirm>
                        <effect_to_cart translate="label">
			    <label>Show or hide Effect to cart</label>
			    <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
			    <sort_order>1</sort_order>
			    <show_in_default>1</show_in_default>
			    <show_in_website>1</show_in_website>
			    <show_in_store>1</show_in_store>							
			</effect_to_cart>
			  <using_ssl translate="label">
			    <label>Using SSL</label>
			    <frontend_type>select</frontend_type>
			    <source_model>adminhtml/system_config_source_yesno</source_model>
			    <sort_order>1</sort_order>
			    <show_in_default>1</show_in_default>
			    <show_in_website>1</show_in_website>
			    <show_in_store>1</show_in_store>							
			</using_ssl>
			<loading_bg>
				<label>Loading Background Color: </label>
				<comment>This color will be used for loadding background</comment>
				<frontend_type>text</frontend_type>
				<frontend_model>ajaxcartsuper/adminhtml_system_config_form_field_customfieldcolor</frontend_model>
				<sort_order>3</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
			</loading_bg>
			<loading_image translate="label comment">
				<label>Loading Image</label>
				<comment>Allowed file types: jpeg, gif, png.</comment>
				<frontend_type>image</frontend_type>
				<backend_model>adminhtml/system_config_backend_image</backend_model>
				<upload_dir config="system/filesystem/media" scope_info="1">theme</upload_dir>
				<base_url type="media" scope_info="1">theme</base_url>
				<sort_order>6</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
			</loading_image>
			<bg_opacity translate="label">
				<label>Background Opacity</label>
				<frontend_type>text</frontend_type>
				<sort_order>7</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>							
			</bg_opacity>
		    </fields>
		</ajaxcartsuper_config>
          	
	    </groups>
	</ajaxcartsuper>
    </sections>
</config>