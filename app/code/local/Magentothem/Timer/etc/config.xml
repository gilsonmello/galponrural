<?xml version="1.0"?>
<config>
    <modules>
        <Magentothem_Timer>
            <version>0.1.0</version>
        </Magentothem_Timer>
    </modules>
    <frontend>
        <routers>
            <timer>
                <use>standard</use>
                <args>
                    <module>Magentothem_Timer</module>
                    <frontName>timer</frontName>
                </args>
            </timer>
        </routers>
        <layout>
            <updates>
                <timer>
                    <file>timer.xml</file>
                </timer>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<timer>
				<use>admin</use>
				<args>
					<module>Magentothem_Timer</module>
					<frontName>timer</frontName>
				</args>
			</timer>
        </routers>
    </admin>
    <adminhtml>
		<menu>
            <magentothem module="timer">
                <title>Magentothem</title>
                <sort_order>80</sort_order>               
                <children>
                    <timer translate="title" module="timer">
                        <title>Price Countdown</title>
                        <sort_order>20</sort_order>
                        <children>
                            <configuration>
                                <title>Configuration</title>
                                <sort_order>1</sort_order>
                                <action>adminhtml/system_config/edit/section/timer</action>
                            </configuration>
                        </children>
                    </timer>
               </children>
            </magentothem>
        </menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Magentothem_Timer>
							<title>Timer Module</title>
							<sort_order>10</sort_order>
						</Magentothem_Timer>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<timer>
					<file>timer.xml</file>
				</timer>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <timer>
                <class>Magentothem_Timer_Model</class>
                <resourceModel>timer_mysql4</resourceModel>
            </timer>
            <timer_mysql4>
                <class>Magentothem_Timer_Model_Mysql4</class>
                <entities>
                    <timer>
                        <table>timer</table>
                    </timer>
                </entities>
            </timer_mysql4>
        </models>
        <resources>
            <timer_setup>
                <setup>
                    <module>Magentothem_Timer</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </timer_setup>
            <timer_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </timer_write>
            <timer_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </timer_read>
        </resources>
        <blocks>
            <timer>
                <class>Magentothem_Timer_Block</class>
            </timer>
        </blocks>
        <helpers>
            <timer>
                <class>Magentothem_Timer_Helper</class>
            </timer>
        </helpers>
    </global>
	<default>
		<timer>
			<general>
				<activate_magentothem_timer>1</activate_magentothem_timer>
			</general>
			<timer_config>
				<enabled>1</enabled>
				<title>Sale Off</title>
				<auto>0</auto>
				<speed>1000</speed>
				<show_price>1</show_price>
				<addtocart>1</addtocart>
				<addtowishlist>1</addtowishlist>
				<addtocompare>1</addtocompare>
				<review>1</review>
				<description>0</description>
				<maxlength></maxlength>
				<qty>9</qty>
				<itemsDesktop>2</itemsDesktop>
				<itemsDesktopSmall>2</itemsDesktopSmall>
				<itemsTablet>2</itemsTablet>
				<itemsMobile>1</itemsMobile>
				<row_show>1</row_show>
				<width_thumbnail>300</width_thumbnail>
				<height_thumbnail>350</height_thumbnail>
				<next_back>1</next_back>
				<nav_ctrl>0</nav_ctrl>
			</timer_config>
		</timer>
	</default>
</config>